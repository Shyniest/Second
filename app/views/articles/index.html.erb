<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Post date</th>
      <th>Is public</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.post_date %></td>
        <td><%= article.is_public %></td>
        <td><%= article.user.name %> birthday is article.user.birthday</td>
        <td><%= link_to '【閲覧】', article %></td>
        <td><%= link_to '【編集】', edit_article_path(article) %></td>
        <td><%= link_to '【削除】', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

